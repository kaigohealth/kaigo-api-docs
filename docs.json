{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Kaigo Platform Healthcare API",
  "colors": {
    "primary": "#0891B2",
    "light": "#06B6D4",
    "dark": "#0E7490"
  },
  "favicon": "/favicon.svg",
  "openapi": "kaigo-openapi-spec.yaml",
  "custom": {
    "css": "/custom.css"
  },
  "modeToggle": {
    "default": "light"
  },
  "topbarCtaButton": {
    "style": "roundedRectangle"
  },
  "api": {
    "baseUrl": "https://api.kaigo.com",
    "auth": {
      "method": "bearer",
      "name": "Authorization"
    },
    "playground": {
      "mode": "show"
    },
    "maintainOrder": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "authentication",
              "quickstart"
            ]
          },
          {
            "group": "Security & Compliance",
            "pages": [
              "guides/hipaa-compliance",
              "guides/patient-verification"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "guides/call-management",
              "guides/session-management",
              "guides/escalation-handling"
            ]
          },
          {
            "group": "Integration Guides",
            "pages": [
              "guides/event-streaming",
              "guides/webhooks",
              "guides/error-handling",
              "guides/rate-limiting"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "kaigo-openapi-spec.yaml",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/event-schemas"
            ]
          },
          {
            "group": "Calls",
            "pages": [
              {
                "title": "Get Call Context",
                "openapi": "get /api/v1/admin/calls/{call_id}/context"
              },
              {
                "title": "Save Call Results",
                "openapi": "post /api/v1/admin/calls/results"
              },
              {
                "title": "Reschedule Callback", 
                "openapi": "post /api/v1/admin/calls/reschedule"
              },
              {
                "title": "Get Scheduled Calls",
                "openapi": "get /api/v1/admin/calls/scheduled"
              },
              {
                "title": "Update Call Status",
                "openapi": "patch /api/v1/admin/calls/{call_id}/status"
              }
            ]
          },
          {
            "group": "Patient Verification",
            "pages": [
              {
                "title": "Initialize Verification",
                "openapi": "post /api/v1/admin/patients/initialize-verification"
              },
              {
                "title": "Verify Identity",
                "openapi": "post /api/v1/admin/patients/verify-identity"
              }
            ]
          },
          {
            "group": "Patient Data",
            "pages": [
              {
                "title": "Get Patient Profile",
                "openapi": "get /api/v1/admin/patients/{patient_id}/profile"
              },
              {
                "title": "Get Medical Information",
                "openapi": "get /api/v1/admin/patients/{patient_id}/medical"
              },
              {
                "title": "Get Recent Visits",
                "openapi": "get /api/v1/admin/patients/{patient_id}/visits"
              }
            ]
          },
          {
            "group": "Scheduling",
            "pages": [
              {
                "title": "Get Patient Schedules",
                "openapi": "get /api/v1/admin/patients/{patient_id}/schedules"
              }
            ]
          },
          {
            "group": "Session Management",
            "pages": [
              {
                "title": "Revoke Session Token",
                "openapi": "delete /api/v1/admin/sessions/{session_token}"
              }
            ]
          },
          {
            "group": "Escalations",
            "pages": [
              {
                "title": "Create Escalation",
                "openapi": "post /api/v1/admin/escalations"
              }
            ]
          },
          {
            "group": "Event Streaming (Pub/Sub)",
            "pages": [
              {
                "title": "ASR Segment Event",
                "openapi": "post /events/asr-segment"
              },
              {
                "title": "Voice Activity Detection",
                "openapi": "post /events/vad"
              },
              {
                "title": "Agent Turn Event",
                "openapi": "post /events/agent-turn"
              },
              {
                "title": "Interruption Event",
                "openapi": "post /events/interruption"
              },
              {
                "title": "Error Event",
                "openapi": "post /events/error"
              },
              {
                "title": "Call Metrics",
                "openapi": "post /events/metrics"
              }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://kaigo.com"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
